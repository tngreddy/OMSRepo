<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.0.xsd
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx.xsd
        ">

	<!-- <mvc:resources mapping="/resources/**" location="/resources/" cache-period="31556926"/> -->
	<mvc:default-servlet-handler />
	<mvc:annotation-driven />

	<context:annotation-config />
	<context:component-scan base-package="com.vjentrps.oms.*" />

	<tx:annotation-driven />

	<mvc:interceptors>
      <bean class="com.vjentrps.oms.interceptor.SecureUserInterceptor" />
	</mvc:interceptors> 
	
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:dbQueries.properties</value>
				<value>classpath:log4j.properties</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>

	<!-- <bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"> 
		<property name="prefix"> <value>/WEB-INF/views/</value> </property> <property 
		name="suffix"> <value>.jsp</value> </property> <property name="order" value="2" 
		/> </bean> -->


	<bean id="dataSource" destroy-method="close"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/sms_db_v2" />
		<property name="username" value="root" />
		<property name="password" value="" />
	</bean>

	<util:map id="errorMessages" key-type="java.lang.Integer"
		value-type="java.lang.String">
		<entry key="1000"
			value="Oops some thing went wrong, try refreshing the page " />
		<entry key="1001"
			value="Oops there is technical glitch, try again " />
		<entry key="1002"
			value="No data found for the search input" />
		<entry key="1003"
			value="UserName/Password is incorrect, Please try again with valid credentials" />
		<entry key="1004"
			value="GoodOut value exceeds the total good stock" />
		<entry key="1005"
			value="DefOut value exceeds the total defective stock" />
		<entry key="1006"
			value="Both GoodOut and DefOut values exceeds the quantities in stock" />
		<entry key="1007"
			value="Duplicates Products selected" />
		<entry key="1008"
			value="GoodIn and DefIn value exceeds the selected GRC GoodOut and DefOut value" />
		<entry key="1009"
			value="GoodIn exceeds the selected GRC GoodOut value" />
		<entry key="1010"
			value="DefIn exceeds the selected GRC DefOut value" />
			
			
	</util:map>

	<bean id="ginIdIncrementer"
		class="org.springframework.jdbc.support.incrementer.MySQLMaxValueIncrementer">
		<property name="incrementerName" value="gin_sequence" />
		<property name="columnName" value="value" />
	<!-- 	<property name="cacheSize" value="5" /> -->
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="rinIdIncrementer"
		class="org.springframework.jdbc.support.incrementer.MySQLMaxValueIncrementer">
		<property name="incrementerName" value="rin_sequence" />
		<property name="columnName" value="value" />
		<!-- <property name="cacheSize" value="5" /> -->
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="grcIdIncrementer"
		class="org.springframework.jdbc.support.incrementer.MySQLMaxValueIncrementer">
		<property name="incrementerName" value="grc_sequence" />
		<property name="columnName" value="value" />
	<!-- 	<property name="cacheSize" value="5" /> -->
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="gocIdIncrementer"
		class="org.springframework.jdbc.support.incrementer.MySQLMaxValueIncrementer">
		<property name="incrementerName" value="goc_sequence" />
		<property name="columnName" value="value" />
		<!-- <property name="cacheSize" value="5" /> -->
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>